<div class="card">
    <div class="card-body">
        <div class="container mb-5 mt-3">
            {{#each allDetails}}
            <div class="row d-flex align-items-baseline">


                {{#each this.orderPaymentDetails}}
                <div class="col-xl-9">
                    <p style="color: #7e8d9f;font-size: 20px;">Invoice >> <strong>{{this.payment_ID}}</strong></p>
                    <hr>
                </div>


                <div class="container">
                    <div class="col-md-12">
                        <div class="text-center">
                            <h3 class="pt-0" style="color: #5d9fc5;">CraftX.com</h3>
                        </div>

                    </div>


                    <div class="row">
                        <div class="col-xl-8">
                            <ul class="list-unstyled">
                                <li class="text-muted">To: <span
                                        style="color:#5d9fc5 ;">{{../this.address.userName}}</span></li>
                                <li class="text-muted">
                                    {{../this.address.locality}},{{../this.address.town}},{{../this.address.state}}</li>
                                <li class="text-muted">{{../this.address.address}}</li>
                                <li class="text-muted"><small>Pin Code: </small></i>{{../this.address.pinCode}}</li>
                                <li class="text-muted"><small>Phone: </small></i>{{../this.address.phoneNumber}}</li>
                            </ul>
                        </div>
                        <div class="col-xl-4">
                            <p class="text-muted">Invoice</p>
                            <ul class="list-unstyled">
                                <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span
                                        class="fw-bold">ID:</span>{{this.payment_ID}}</li>
                                <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span
                                        class="fw-bold">Creation Date: </span>{{this.created_at}}</li>
                                {{!-- <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span
                                        class="me-1 fw-bold">Status:</span><span
                                        class="badge bg-warning text-black fw-bold">
                                        Unpaid</span></li> --}}
                            </ul>
                        </div>
                    </div>
                    {{/each}}
                    <div class="row my-2 mx-1 justify-content-center">
                        <table class="table table-striped table-borderless">
                            <thead style="background-color:#84B0CA ;" class="text-white">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Qty</th>
                                    <th scope="col">Unit Price</th>
                                    <th scope="col">Amount</th>
                                </tr>
                            </thead>


                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>{{./this.address.userName}}</td>
                                    {{#each ./this.productDetails}}
                                    <td>{{this.name}}</td>
                                    {{/each}}

                                    {{#each ./this.orderItems}}
                                    <td>{{this.quantity}}</td>
                                    <td>Rs.{{this.unitPrice}}</td>
                                    <td>Rs.{{this.unitPrice}}</td>
                                    {{/each}}


                                </tr>
                            </tbody>



                        </table>
                    </div>
                    <div class="row">
                        {{#each ./this.orderItems}}
                        <div class="col-xl-3">
                            {{!-- <ul class="list-unstyled">
                                <li class="text-muted ms-3"><span class="text-black me-4">SubTotal</span>$1110</li>
                                <li class="text-muted ms-3 mt-2"><span class="text-black me-4">Tax(15%)</span>$111</li>
                            </ul> --}}
                            <p class="text-black float-start"><span class="text-black me-3"> Total Amount</span><span
                                    style="font-size: 25px; color: green">Rs.{{this.unitPrice}}</span></p>
                        </div>

                    </div>
                    <div class="col-xl-10">
                        <p><strong>Thank you for your purchase</strong></p>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-xl-2">
                            <div class="col-xl-3">
                                <a class="btn btn-light text-capitalize border-0"
                                    href="/admin/sales-report/postInvoice?orderId={{../this._id}}&productID={{this.productID}}"
                                    data-mdb-ripple-color="dark"><i class="fas fa-print text-primary"></i> Print</a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{/each}}
            </div>
        </div>
    </div>