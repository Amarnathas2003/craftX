{{>admin-navbar}}


<section class="mt-4">

    <div class="container-fluid">
        <div class="row">
            {{>admin-left-menue}}


            <div class="col-md-8" style="width: 1000px;">
                <section class="category d-flex mt-2">
                    <div class="object-fit-contain mt-3" style="width: 100%;">
                        <div class="header d-flex justify-content-between">
                            <h3 class="h3 text-second fw-bold mb-3">Sales</h3>

                            {{!-- Filter Button --}}

                            {{!-- <div>
                                <a href="" class="btn border border-dark" id="itemsBtn">Filter</a>
                            </div> --}}

                            {{!-- Filter Items DIV --}}
                            <div id="filterFormContainer">
                                <form action="/admin/sales-report/filter" method="post">
                                    <div class="card border border-dark"
                                        style="background-color: rgb(234, 240, 238); width: 800px; height: 100px"
                                        id="itemsContainer">
                                        <div class="card-body">
                                            <div class="d-flex">

                                                <small>From </small>
                                                <input type="date" name="from_Date"
                                                    style="height: 30px; margin-left: 10px">


                                                <small>To</small>
                                                <input type="date" name="to_Date"
                                                    style="height: 30px; margin-left: 10px">

                                                <div class="d-flex" style="margin-left: 20px;">

                                                    <div class="form-check" style="margin-left: 20px;">
                                                        <input type="radio" class="form-check-input" id="radio1"
                                                            name="payment_method" value="Cash On Delivery">
                                                        COD
                                                        <label class="form-check-label" for="radio1"></label>
                                                    </div>
                                                    <div class="form-check" style="margin-left: 20px;">
                                                        <input type="radio" class="form-check-input" id="radio2"
                                                            name="payment_method" value="Pay Online">
                                                        Online
                                                        <label class="form-check-label" for="radio2"></label>
                                                    </div>

                                                    <div style="margin-left: 30px;">

                                                        <input type="number" name="from_amount" id="inputBox1">

                                                        <input type="number" name="to_amount" id="inputBox2"
                                                            class="mt-2">

                                                    </div>
                                                </div>
                                                <button type="submit" class="btn border border-dark">Apply</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        {{!-- Report Invoice Excel Download --}}
                        <button id="btnExcel" class="btn btn-success border mb-2">Download Report</button>

                        <table style="width: 100%;" id="customerTable"
                            class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="th-sm">Customer Name</th>
                                    <th class="th-sm">Product Name</th>
                                    <th class="th-sm">Order Date</th>
                                    <th class="th-sm">Amount</th>


                                    <th class="th-sm">Payment Method</th>
                                    <th class="th-sm">Quantity</th>
                                    <th class="th-sm">Invoice</th>
                                </tr>
                            </thead>

                            <tbody>
                                {{#each totalSales}}

                                <tr>
                                    {{#each this.userDetails}}
                                    <td>{{this.fullname}}</td>
                                    {{/each}}

                                    {{#each this.productDetails}}
                                    <td style="font-weight: bold;">{{this.name}}
                                    </td>
                                    {{/each}}
                                    <td>{{this.dateFormatted}}</td>

                                    <td style="font-weight: bold; color: green">{{this.orderAmount}}</td>


                                    <td style="font-weight: bold;">{{this.payment_method}}</td>

                                    {{#each orderItems}}
                                    <td>{{this.quantity}}</td>
                                    <td>
                                        <a href="/admin/sales-report/getInvoice?orderId={{../this._id}}&productID={{this.productID}}"
                                            class="btn btn-success border border-dark">Invoice</a>
                                    </td>
                                    {{/each}}
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </div>
    </div>
</section>

<script>

    $(document).ready(function () {
        $("#btnExcel").click(function () {
            console.log("clicked")
            let table = document.getElementById("customerTable");
            console.log(table)


            // Find the column index of the Invoice column.
            const invoiceColumnIndex = Array.from(table.querySelectorAll("th")).findIndex(th => th.textContent === "Invoice");

            if (invoiceColumnIndex !== -1) {
                // Remove the Invoice column from the table.
                let rows = table.getElementsByTagName("tr");
                for (let i = 0; i < rows.length; i++) {
                    rows[i].deleteCell(invoiceColumnIndex);
                }
            }

            // Convert the modified table to Excel.
            TableToExcel.convert(table, {
                name: 'salesreport.xlsx',
                sheet: {
                    name: 'salesreport'
                }
            });
        });

    });




</script>


