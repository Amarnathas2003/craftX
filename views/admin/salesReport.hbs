{{>new-user-header}}


<section class="mt-4">

    <div class="container-fluid">
        <div class="row">

            <div class="col-md-4" style="width: 250px;">
                <div class="list-group">
                    <li class="list-group-item"><a href="/admin/products"> <i
                                class="fa-solid fa-box-open side-bar-icon"></i>Products</a></li>
                    <li class="list-group-item"><a href=""><i class="fa-regular fa-user side-bar-icon"></i>Customers</a>
                    </li>
                    <li class="list-group-item"><a href=""><i
                                class="fa-solid fa-cart-shopping side-bar-icon"></i>Orders</a></li>
                    <li class="list-group-item"><a href="category"><i
                                class="fa-solid fa-table-cells-large fa-custom-icon side-bar-icon"></i>Category</a></li>
                    <li class="list-group-item"><a href=""> <i class="fa-solid fa-arrow-up-from-bracket side-bar-icon"
                                style="transform: rotate(90deg);"></i>Sales Report</a></li>
                    <li class="list-group-item"><a href=""><i
                                class="fa-solid fa-money-bill-wave side-bar-icon"></i>Manage
                            Coupon</a></li>
                    <li class="list-group-item"><a href=""><i class="fa-solid fa-font-awesome side-bar-icon"></i>Banner
                            Manage</a></li>
                </div>

                <div class="btn-container d-flex justify-content-center align-items-inline mt-5">
                    <a href="logout" class="btn border-primary-subtle">Log Out</a>
                    <a href="/admin/home" class="btn border-primary-subtle" style="margin-left: 40px;">Back</a>
                </div>
            </div>

            <div class="col-md-8" style="width: 1000px;">
                <section class="category d-flex mt-2">
                    <div class="object-fit-contain mt-3" style="width: 100%;">
                        <div class="header d-flex justify-content-between">
                            <h3 class="h3 text-second fw-bold mb-3">Sales</h3>

                            {{!-- Filter Button --}}
                          
                            <div>
                                <a href="" class="btn border border-dark" id="itemsBtn">Filter</a>
                            </div>
                     


                            {{!-- Filter Items DIV --}}
                            <form action="/admin/sales-report/filter"  method="post">
                                <div class="card border border-dark"
                                    style="background-color: rgb(234, 240, 238); width: 800px; height: 100px"
                                    id="itemsContainer">
                                    <div class="card-body">
                                        <div class="d-flex">

                                            <small>From </small>
                                            <input type="date" name="from_Date" style="height: 30px; margin-left: 10px">


                                            <small>To</small>
                                            <input type="date" name="to_Date" style="height: 30px; margin-left: 10px">

                                            <div class="d-flex" style="margin-left: 20px;">

                                                <div class="form-check" style="margin-left: 20px;">
                                                    <input type="radio" class="form-check-input" id="radio1"
                                                        name="payment_method" value="Cash On Delivery">
                                                    COD
                                                    <label class="form-check-label" for="radio1"></label>
                                                </div>
                                                <div class="form-check" style="margin-left: 20px;">
                                                    <input type="radio" class="form-check-input" id="radio2"
                                                        name="payment_method" value="Pay Online">
                                                    Online
                                                    <label class="form-check-label" for="radio2"></label>
                                                </div>

                                                <div style="margin-left: 30px;">

                                                    <input type="number" name="from_amount" id="inputBox1">

                                                    <input type="number" name="to_amount" id="inputBox2" class="mt-2">

                                                </div>

                                            </div>
                                            <button type="submit" class="btn border border-dark">Apply</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>



                        <table style="width: 100%;" id="customerTable"
                            class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="th-sm">Customer Name</th>
                                    <th class="th-sm">Product Name</th>
                                    <th class="th-sm">Order Date</th>
                                    <th class="th-sm">Amount</th>


                                    <th class="th-sm">Payment Method</th>
                                    <th class="th-sm">Quantity</th>
                                    <th class="th-sm">Invoice</th>
                                </tr>
                            </thead>

                            <tbody>
                                {{#each totalSales}}

                                <tr>
                                    {{#each this.userDetails}}
                                    <td>{{this.fullname}}</td>
                                    {{/each}}

                                    {{#each this.productDetails}}
                                    <td style="font-weight: bold;">{{this.name}}
                                    </td>
                                    {{/each}}
                                    <td>{{this.dateFormatted}}</td>

                                    <td style="font-weight: bold; color: green">{{this.orderAmount}}</td>


                                    <td style="font-weight: bold;">{{this.payment_method}}</td>

                                    {{#each orderItems}}
                                    <td>{{this.quantity}}</td>
                                    <td>
                                        <a href="/admin/sales-report/getInvoice?orderId={{../this._id}}&productID={{this.productID}}"
                                            class="btn btn-success border border-dark">Invoice</a>
                                    </td>
                                    {{/each}}
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </div>
    </div>
</section>


<style>
    a {
        text-decoration: none;
    }

    i {
        margin-right: 20px;
    }

    .btn2 {
        border: 1px solid black;
        color: white;
        border-radius: 5px;
        padding: 7px;
    }

    .backBtn {
        margin-left: 20px;
        color: black;
    }

    .logout_btn {
        margin-top: 50px;
        margin-left: 10px;
        border: 1px solid black;
        background-color: rgb(231, 126, 126);
    }
</style>