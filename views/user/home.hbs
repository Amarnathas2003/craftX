<section class="row mt-4">
  <div class="card-container d-flex mt-3 border">

    {{#each allproducts}}
    {{#unless this.is_delete}}

    <div class="card border" style="width: 18rem;">

      <a href=""><span class="material-symbols-outlined icon" style="margin-left: 250px;">favorite</span></a>

      {{#each this.primaryImage}}
      <a href="/view-product/{{this._id}}">
        <img src="/uploads/{{this}}" class="card-img-top images" alt="">
      </a>
      {{/each}}

      <div class="card-body">
        <a href="/view-product/{{this._id}}" class="card-title" style="margin-left: 5px;">{{this.name}}</a>
         <br>
        <small class="card-text fw-bold" style="color: red; margin-left: 110px;">{{this.price}}</small>

        <div class="d-flex mt-3">

          <button class="btn border border-dark mt-4" onclick="addToCart('{{this._id}}')" id="add-to-cart">Add to
            Cart</button>


          <a href="/check-out/{{this._id}}" target="_blank" class="btn border-dark mt-4" id="buy-now">Buy Now</a>


          {{!-- <button class="btn border border-dark" onclick="buyNow('{{this._id}}')" id="buy-now">Buy Now</button>
          --}}
        </div>
      </div>
    </div>
    {{/unless}}
    {{/each}}
  </div>
</section>
