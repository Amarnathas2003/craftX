<script>
  $(document).ready(() => {
    $('#profile-list').hide()
    $('#profile-icon').on().click(function () {
      $('#profile-list').slideToggle()
    })

  })


  function addToCart(prodID) {
    $.ajax({
      url: '/add-to-cart/' + prodID,
      method: 'get',
      success: (response) => {
        if (response.status) {

          let count = $('#count-badge').html()
          count = parseInt(count) + 1;
          $('#count-badge').html(count);

        }
      }
    });
  }

</script>



